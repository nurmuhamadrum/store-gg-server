<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Nominal</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
                        <li class="breadcrumb-item active">Add</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Form Add Nominal</h3>
                        </div>

                        <!-- form start -->
                        <form action="/nominal/create" method="post">
                        <!-- <form> -->
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Nama Koin</label>
                                    <select class="form-control select2" style="width: 100%;" name="coinName" required>
                                        <option selected="selected">Pilih Koin</option>
                                        <option value="Gold">Gold</option>
                                        <option value="Diamond">Diamond</option>
                                        <option value="Jewel">Jewel</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="coinQuantity">Jumlah Koin</label>
                                    <input type="number" name="coinQuantity" class="form-control" id="coinQuantity" required
                                        placeholder="Masukan Jumlah Koin">
                                </div>
                                <div class="form-group">
                                    <label for="price">Jumlah Koin</label>
                                    <input type="number" name="price" class="form-control" id="price" required
                                        placeholder="Masukan Harga">
                                </div>
                                
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                        <!-- form end -->

                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
    </section>
    <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
