<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Bank</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Form Edit Bank "<%= bank.name %>"</h3>
                        </div>

                        <!-- form start -->
                        <form action="/bank/edit/<%= bank._id %>?_method=put" method="post">
                        <!-- <form> -->
                            <div class="card-body">

                                <div class="form-group">
                                    <label for="name">Nama Pemilik</label>
                                    <input type="text" name="name" value="<%= bank.name %>" class="form-control" id="name" required
                                        placeholder="Masukan Nama Pemilik">
                                </div>
                                <div class="form-group">
                                    <label for="nameBank">Nama Bank</label>
                                    <input type="text" name="nameBank" value="<%= bank.nameBank %>" class="form-control" id="nameBank" required
                                        placeholder="Masukan Nama Bank">
                                </div>
                                <div class="form-group">
                                    <label for="nomorRekening">Nomor Rekening</label>
                                    <input type="number" name="nomorRekening" value="<%= bank.nomorRekening %>" class="form-control" id="nomorRekening" required
                                        placeholder="Masukan Nomor Rekening">
                                </div>
                                
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                        <!-- form end -->

                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
    </section>
    <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>